@{
}
@using SinemaApp.Models
@model List<Sinema>

<table class="table">
    <thead>
        <tr>
            <th >İsim</th>
            <th >Adres</th>
            <th >Guncelle</th>
            <th >Salon Ekle</th>
            <th >Salonlari Görüntüle</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Sinema sinema in Model){
            <tr>
                <td>@sinema.Isim</td>
                <td>@sinema.Adres</td>
                <td><a> Guncelle </a></td>
                <td><a class="btn modalSalonEkle" data-bs-toggle="modal" data-bs-target="#myModalSalonEkle" data-sinemaId ="@sinema.Id"> Salon Ekle </a></td>
                <td><a asp-controller="Salon" asp-action="Listele" asp-route-id="@sinema.Id" > Salonlari Görüntüle </a> </td>
            </tr> 
        }
        
    </tbody>
</table>

<div class="modal" tabindex="-1" id="myModalSalonEkle">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Film Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mesaj"></p>
                <form id="SalonEkleForm">
                    <div>
                        <label></label>
                        <input class="form-control formSalonSinemaId" type="hidden" name="Id" />
                    </div>
                    <div>
                        <label> Salon İsmi: </label>
                        <input class="form-control formSalonIsim" type="text" name="Isim" placeholder="Salonun ismini giriniz" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary salonEkle">Salon Ekle</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(".modalSalonEkle").click(
            function () 
            {
                var id = $(this).attr("data-sinemaId");

                $(".formSalonSinemaId").val(id);

            }
        );

        $(".salonEkle").click(
            function () {
                var formData = {
                    Id: $(".formSalonSinemaId").val(),
                    Isim: $(".formSalonIsim").val()
                    
                };
                $.ajax(
                    {
                        type: "POST",
                        url: "/Salon/Ekle/",
                        data: formData,
                        success: function (durum) {
                            if (durum == "basarili") {
                                window.location.replace("/Sinema/Index");
                            }
                            else {
                                $(".modal-body>p.mesaj").html("Hata olustu");
                            }
                        }
                    }
                )
            }
        );


    </script>
}