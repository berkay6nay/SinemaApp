@{
}
@using SinemaApp.Models
<h1>Bu sayfada gösterimler de listelenecek</h1>


<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-light" style="border-radius: 12px;">
                <img class="card-img-top" src="..." alt="Film Fotolari Guncellenecek" style="border-top-left-radius: 12px; border-top-right-radius: 12px;">
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.film.Isim</h5>
                    <p class="card-text mb-2"><strong>Aciklama:</strong> @ViewBag.film.Aciklama</p>
                    <p class="card-text mb-2"><strong>Dil:</strong> @ViewBag.film.Dil</p>
                    <p class="card-text mb-4"><strong>Süre:</strong> @ViewBag.film.Sure dakika</p>
                    <!-- Optional: Add a button or link if needed -->
                    <a asp-controller="Sinema" asp-action="Detay" asp-route-id="@ViewBag.film.Id" class="btn btn-primary">Detayları Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>



  