<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SinemaApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SinemaApp.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #e9ecef; /* Darker background color */
        }

        .navbar {
            background-color: #212529; /* Darker navbar color */
        }

        .navbar-brand {
            color: #ffffff !important;
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }

        .navbar-nav .nav-link {
            color: #ffffff !important;
        }

        .dropdown-menu {
            background-color: #343a40;
        }

        .dropdown-item {
            color: #ffffff !important;
        }

            .dropdown-item:hover {
                background-color: #495057;
            }

        .footer {
            background-color: #343a40;
            color: #ffffff;
        }

            .footer a {
                color: #ffc107;
            }

        .btn-secondary {
            background-color: #ffc107;
            border-color: #ffc107;
        }

            .btn-secondary:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }

        main {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SinemaNet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li><a asp-controller="Home" asp-action="Giris">Giris Yap</a></li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li><a asp-controller="Home" asp-action="Cikis">Çıkış Yap</a></li>
                        </ul>
                    }
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Admin Panel
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-controller="Film" asp-action="Index">Filmler</a>
                            <a class="dropdown-item" asp-controller="Sinema" asp-action="Index">Sinemalar</a>
                            <a class="dropdown-item" asp-controller="Gosterim" asp-action="Index">Gösterimler</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @if (User.Identity.IsAuthenticated)
            {
                <a>@User.Identity.Name</a>
            }
            
                   

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2024 - SinemaApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
