@{
}
@using SinemaApp.Models
@model List<Film>;

@if (Model.Any())
{
    <div class="container text-center">
        <h1 class="mb-4">Arama Sonuçları</h1>
        <div class="row">
            @foreach (Film film in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-light fixed-card" style="border-radius: 12px;">
                        <div class="card-img-container">
                            @if (film.FotoUrl != null)
                            {
                                <img class="card-img" src="@film.FotoUrl" alt="" />
                            }
                            else
                            {
                                <p class="no-photo">Şimdilik foto yok</p>
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@film.Isim</h5>
                            <p class="card-text">@film.Aciklama</p>
                            <p class="card-text"><strong>Dil:</strong> @film.Dil</p>
                            <p class="card-text"><strong>Süre:</strong> @film.Sure dakika</p>
                            <a asp-controller="Sinema" asp-action="Detay" asp-route-id="@film.Id" class="btn btn-primary">Sinemaları Gör</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>

}
else
{
    <h1>Bu isimde film bulunamadı</h1>
}


