@{
    ViewData["Title"] = "Home Page";
}
@using SinemaApp.Models
@model List<Film>;
<div class="container">
    <div class="row">
        @foreach (Film film in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img class="card-img-top custom-img" src="@film.FotoUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@film.Isim</h5>
                        <p class="card-text">@film.Aciklama</p>
                        <a asp-controller="Sinema" asp-action="Detay" asp-route-id="@film.Id" class="btn btn-primary">Sinemaları Gör</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



<style>
    .custom-img {
        width: 100%;
        height: 600px;
        object-fit: cover;
        transition: transform 0.3s ease; /* Transition for smooth effect */
    }

    .card:hover .custom-img {
        transform: scale(1.1); /* Scale up the image on hover */
    }


    .card-deck .card {
        display: flex;
        flex-direction: column;
    }

    .card-deck .card-body {
        flex: 1 1 auto;
    }
</style>
